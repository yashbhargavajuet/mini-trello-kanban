# Production Environment Variables for Mini-Trello Frontend
# Copy this file to .env.production and update with your actual values

# Backend API URL - Replace with your Railway backend URL
VITE_API_URL=https://your-backend-app.railway.app/api

# WebSocket URL for real-time features - Replace with your Railway backend URL
VITE_SOCKET_URL=https://your-backend-app.railway.app

# App Configuration
VITE_APP_NAME="Mini-Trello"
VITE_APP_VERSION="1.0.0"

# Features flags
VITE_ENABLE_REAL_TIME=true
VITE_ENABLE_NOTIFICATIONS=true

# Analytics (Optional - for future use)
# VITE_GA_TRACKING_ID=GA_MEASUREMENT_ID
# VITE_HOTJAR_ID=HOTJAR_SITE_ID

# Error Reporting (Optional - for future use)  
# VITE_SENTRY_DSN=https://your-sentry-dsn
# VITE_SENTRY_ENVIRONMENT=production

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false